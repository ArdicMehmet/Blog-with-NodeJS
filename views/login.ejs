<!DOCTYPE html>
<html lang="tr">

<head>
    <%-include('./inc/head')%>
    <link rel="stylesheet" href="/style/btn.css">
</head>

<body>
    
    <header class="masthead" style="background-image: url('img/home-bg.jpg'); padding-top: 2rem;padding-bottom: 3rem;">
        <%-include('./inc/nav')%>
    </header>
    <div id="log-in-container">
        
        <h3 id="heading" style="text-align: center;">Log In</h3>

        <% if(typeof alert != "undefined"){ %> 
            <% alert.forEach(function(error){ %> 
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                   <%= error.msg %> 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>

                  <% }) %>
        <% } %>  


        <% if(typeof error != "undefined"){ %> 
         
                <div class="alert alert-warning alert-dismissible fade show" style="width: 50%; margin: 0 auto;" role="alert">
                   <%= error%> 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>

                 
        <% } %>  

        <form  action="/author/login" id="contactForm" method="post" style="width: 50%; margin: 0 auto;" >
            <div id="message" class="form-floating warning"></div>
            <div class="form-floating">
                <input class="form-control" id="email" name="email" type="email" placeholder="Enter your email"  />
                <label for="email">Eposta</label>
                
            </div>
            <div class="form-floating">
                <input class="form-control" id="password" name="password" type="password" placeholder="Enter your password..."  />
                <label for="password">Password</label>
                
            </div>
            <br>
            <div class="form-floating" style="display: inline-block; margin-right: 20px;">
                <a href="/author/resetPassword" class="blue" style="color: #0095F6;">Forgot Password</a>
            </div>
            <div class="form-floating" style="display: inline-block;">
                <a href="/author/signUp" class="aqua"  style="color: #0095F6;">Sign Up Now</a>
            </div>
            
            <br />

            <div class="center">
                <div class="inputbox">
                    <input type="submit" id="btn" value="Log In">
                </div> 
            </div>
            
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap core JS-->
    
    
</body>

</html>