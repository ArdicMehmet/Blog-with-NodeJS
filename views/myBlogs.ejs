<!DOCTYPE html>
<html lang="tr">

<head>

    <%-include('./inc/head')%>
    <link rel="stylesheet" href="/style/homePage.css">

</head>

<body>
    <header class="masthead" style="background-image: url('img/home-bg.jpg'); padding-top: 2rem;padding-bottom: 3rem;">
        <%-include('./inc/nav')%>
    </header>


    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- Post preview-->
                <% blogs.forEach( (blog) => { %>
                    <div class="post-preview">
                        <a href="/blog/get/<%=blog._id%>">
                            <h2 class="post-title"><%=blog.title %></h2>
                            <h3 class="post-subtitle"><%-blog.short %></h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="#"><%=blog.author.username %></a>
                            <%=blog.createdAt%>
                        </p>
                    </div>
        
                    <a href="/blog/getUpdateBlogPage/<%=blog._id%>" style="color: rgb(40, 219, 64);" >Update</a>
                    <a href="/blog/deleteBlog/<%=blog._id%>" style="color: red;" >Delete</a>
                        
                    
                    <hr class="my-4"/>
                <% }) %>     
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>
            </div>
        </div>
    </div>


      
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
      
      <script src="/script/scripts.js"></script>

</body>

</html>